{
  "mcpServers": {
    "firebase-dam": {
      "command": "/path/to/mcp-server-firebase/venv/bin/python",
      "args": [
        "/path/to/mcp-server-firebase/main.py",
        "--google-credentials",
        "/path/to/mcp-server-firebase/credentials.json",
        "--transport",
        "stdio"
      ],
      "env": {
        "PYTHONPATH": "/path/to/mcp-server-firebase"
      }
    }
  }
}